- if @trip_day.errors.present?
  .alert.alert-danger{ role: 'alert' }
    - @trip_day.errors.full_messages.each do |message|
      = message

.well
  = form_for [@trip_plan, @trip_day], html: { class: 'form-horizontal' } do |f|
    .alert.alert-info
      This form supports Markdown. You can insert links and emphasize text!
    %fieldset
      .form-group
        = f.label :date, class: 'col-lg-2 control-label'
        .col-lg-10= f.text_field :date, placeholder: Date.tomorrow.to_s, class: 'form-control'
      .form-group
        = f.label :planned_start, class: 'col-lg-2 control-label'
        .col-lg-10= f.text_field :planned_start, placeholder: 'Saturday afternoon from car park. Enough time for day and night hiking.', class: 'form-control'
      .form-group
        = f.label :planned_finish, class: 'col-lg-2 control-label'
        .col-lg-10= f.text_field :planned_finish, placeholder: 'Find a camping spot before turning right away from Thredbo river.', class: 'form-control'
      .form-group
        = f.label :water_availability, class: 'col-lg-2 control-label'
        .col-lg-10= f.text_field :water_availability, placeholder: 'Moderate.', class: 'form-control'
      .form-group
        = f.label :hammock_trees, class: 'col-lg-2 control-label'
        .col-lg-10= f.text_field :hammock_trees, placeholder: 'Minimal to moderate options - will need to take when available.', class: 'form-control'
      .form-group
        = f.label :fishing, class: 'col-lg-2 control-label'
        .col-lg-10= f.text_field :fishing, placeholder: 'Not this trip.', class: 'form-control'
      .form-group
        = f.label :geocaches, class: 'col-lg-2 control-label'
        .col-lg-10= f.text_field :geocaches, class: 'form-control'
    %fieldset
      .form-group
        .col-lg-12
          = f.submit class: 'btn btn-primary btn-lg btn-block'

- footer_js do
  :javascript
    $('#trip_day_date').datepicker({
      format: 'yyyy-mm-dd'
    });
